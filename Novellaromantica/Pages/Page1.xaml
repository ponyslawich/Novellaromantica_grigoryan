<Page x:Class="Novellaromantica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Novellaromantica"
        mc:Ignorable="d"
        Title="MainWindow" Height="770" Width="800">
    <Grid Margin="0,0,0,10">
        <Image x:Name="BackgroundImage"  Margin="0,0,0,45" Source="/images/1.jpg" Stretch="UniformToFill"/>
        <TextBlock x:Name="storyText" Text="Это история о девушке попавшей в большой город наполненый любовью, горем и ненавистью." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Margin="0,208,0,0" RenderTransformOrigin="0.514,-1.642"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,400,240,0">
            <Button x:Name="buttonA" Content="Начало" Click="buttonA_Click" Width="150" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
